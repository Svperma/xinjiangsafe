/* 分页 */
#pagination-digg li { border:0; margin:0; padding:0; font-size:11px; list-style:none; /* savers */ float:left; }
#pagination-digg a { border:solid 1px #5BC0DE; margin-right:2px; }
#pagination-digg .previous-off,#pagination-digg .next-off  { border:solid 1px #DEDEDE; color:#888888; display:block; float:left; font-weight:500; margin-right:2px; padding:3px 4px; }
#pagination-digg .next a,#pagination-digg .previous a { font-weight:500; }	
#pagination-digg .active { background:#5BC0DE; color:#FFFFFF; font-weight:bold; display:block; float:left; padding:4px 6px; /* savers */ margin-right:2px; }
#pagination-digg a:link,#pagination-digg a:visited { color:#337AB7; display:block; float:left; padding:3px 6px; text-decoration:none; }
#pagination-digg a:hover { border:solid 1px #337AB7; }


.bank_icon {
	width:150px;
	height:50px;
	border:1px solid #DDD;
	float:left;
	margin:20px;
	transition:0.3s;
	-moz-transition:0.3s;	/* Firefox 4 */
	-webkit-transition:0.3s;	/* Safari 和 Chrome */
	-o-transition:0.3s;	/* Opera */
	}
.bank_icon:hover {
	border:1px solid #286090;
	}

